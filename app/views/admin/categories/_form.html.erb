<%= form_for [:admin, @category] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :name, t(".category_name"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-12">
      <%= f.text_field :name, class: "form-control mb-3"  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, t(".category_description"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-12">
      <%= f.text_area :description, class: "form-control mb-3"  %>
    </div>
  </div>
  <div class="form-group">
    <div class="offset-sm-10 col-sm-2">
      <%= f.submit yield(:button_text), class: "btn btn-success btn-register" %>
    </div>
  </div>
<% end %>
