<%= form_for @user do |f| %>
<%= render "shared/error_messages", object: @user %>
  <div class="form-group row mt-4">
    <%= f.label :username, t(".user_name"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :username, class: "form-control mb-3" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, t(".email"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.email_field :email, class: "form-control mb-3" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, t(".password"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.password_field :password, class: "form-control mb-3" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, t(".confirmation"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.password_field :password_confirmation, class: "form-control mb-3" %>
    </div>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-primary col-lg-12 mt-3" %>
<% end %>
