<% provide :title, t(".register") %>
<div class="container margin-header margin-footer">
  <h1 class="title"><%= t ".register" %></h1>
  <div>
    <div class="offset-lg-3">
      <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
        <div class="form-group">
          <%= f.label :username, t(".user_name"), class: "col-md-4 control-label" %>
          <div class="col-lg-9">
            <%= f.text_field :username, class: "form-control", placeholder: t(".username_ph") %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, "Email", class: "col-md-4 control-label" %>
          <div class="col-lg-9">
            <%= f.text_field :email, class: "form-control", placeholder: t(".email_ph") %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, t(".password"), class: "col-md-4 control-label" %>
          <div class="col-lg-9">
            <%= f.password_field :password, class: "form-control", placeholder: t(".password_ph") %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, t(".password_confirm"), class: "col-md-4 control-label" %>
          <div class="col-lg-9">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(".password_confirm_ph") %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-9">
            <%= f.submit t(".register"), class: "btn btn-success btn-register" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

