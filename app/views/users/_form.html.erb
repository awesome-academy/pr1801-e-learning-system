<%= form_for(@user) do |f| %>
  <div class="form-group row mt-4">
    <%= f.label :username, t("user_name"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :username, class: "form-control mb-3" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, t("email"), class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :email, class: "form-control mb-3" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :address, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :address, class: "form-control mb-3" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :phone, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-3">
      <%= f.text_field :phone, class: "form-control mb-3" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :gender, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-2">
      <select class="form-control mb-3" id="gender">
        <option>Male</option>
        <option>Female</option>
        <option>None</option>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :age, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-2">
      <select class="form-control mb-3" id="age">
        <option>< 15</option>
        <option>15 - 18</option>
        <option>18 - 22</option>
        <option>22 - 26</option>
        <option>> 26</option>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :age, "Upload your avatar", class: "col-sm-3 col-form-label" %>
    <div class="col-sm-2">
      <input type="file" class="form-control-file" id="avatar">
    </div>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-primary col-lg-12 mt-3" %>
<% end %>
