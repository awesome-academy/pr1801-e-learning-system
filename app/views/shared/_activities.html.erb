<div class="container">
  <h1 class="text-center mt-5"><%= t ".activities" %></h1>
  <% @activities.each do |activity| %>
    <div class="activity">
      <span class="activity-userpic">
        <%= link_to image_tag(activity.owner.avatar),
          activity.owner if activity.owner %>
      </span>
      <%= link_to activity.owner.username, activity.owner if activity.owner %>
      <%= render_activity activity %>
      <span class="timestamp">
        <%= time_ago_in_words activity.created_at %>
        <%= t ".ago" %>
      </span>
    </div>
  <% end %>
</div>
