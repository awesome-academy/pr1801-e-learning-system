<% provide(:title, @user.username) %>

<div class="container bg-profile">
  <div class="row profile">
    <div class="col-md-3">
      <div class="profile-sidebar">
        <!-- SIDEBAR USERPIC -->
        <div class="profile-userpic">
        </div>
        <!-- END SIDEBAR USERPIC -->
        <!-- SIDEBAR USER TITLE -->
        <div class="profile-usertitle">
          <div class="profile-usertitle-name">
            <%= @user.username %>
          </div>
          <div class="profile-usertitle-job">
            <%= @user.email %>
          </div>
        </div>
        <!-- END SIDEBAR USER TITLE -->
        <!-- SIDEBAR BUTTONS -->
        <div class="profile-userbuttons">
          <button type="button" class="btn btn-success btn-sm">Follow</button><br/>
          <div class="profile-follow">123 people following</div>
        </div>
        <!-- END SIDEBAR BUTTONS -->
        <!-- SIDEBAR MENU -->
        <div class="profile-usermenu">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a href="#" class="nav-link">
              <i class="glyphicon glyphicon-home"></i>
              Overview </a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">
              <i class="glyphicon glyphicon-user"></i>
              <%= link_to "Account Settings", edit_user_path(current_user), class: "nav-link" %> </a>
            </li>
          </ul>
        </div>
        <!-- END MENU -->
      </div>
    </div>
    <div class="col-md-9">
      <div class="profile-content">
        Nothing to show
      </div>
    </div>
  </div>
</div>
