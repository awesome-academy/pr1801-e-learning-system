<% provide :title, t(".word_list") %>
<div class="container mt-5 mb-3">
  <div class="text-sm-center jumbotron mb-3">
    <h1><%= t".word_list" %></h1>
    <h2>(<%= @category.name %>: <%= @lesson.name %>)</h2>
    <%= link_to t(".add_word"), new_admin_category_lesson_word_path,
      class: "btn btn-primary btn-lg" %>
  </div>
  <%= form_tag admin_category_lesson_words_path, method: :get do %>
    <div class="input-group mb-3">
      <% if logged_in? %>
        <div class="input-group-prepend">
          <%= select_tag :learned,
            options_for_select(@user_words.map(&:status)),
            include_blank: t(".learned"), class: "btn btn-secondary" %>
        </div>
      <% end %>
      <%= text_field_tag :prefix, params[:prefix], placeholder: t(".search"),
        class: "form-control" %>
      <div class="input-group-append">
        <%= submit_tag t(".search"), name: nil, class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
  <div class="row m-auto">
    <div class="col-12 bg-info rounded">
      <div class="mt-3">
        <%= will_paginate @words %>
      </div>
      <div>
        <ul class="list-group my-3">
          <% @words.each do |word| %>
            <li class="list-group-item list-group-item-action">
              <div class="row">
                <%= link_to word.name, "#",
                  class: "col-10 btn btn-link btn-sm text-left" %>
                <%= link_to t(".edit"),
                  edit_admin_category_lesson_word_path(@category, @lesson, word),
                  class: "col-1 btn btn-outline-success btn-sm" %>
                <%= link_to t(".delete"),
                  admin_category_lesson_word_path(@category, @lesson, word),
                  method: :delete, data: {confirm: t(".you_sure")},
                  class: "col-1 btn btn-outline-danger btn-sm" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <%= will_paginate %>
    </div>
  </div>
</div>
