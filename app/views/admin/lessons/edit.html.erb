<% provide :title, t(".edit_lesson") %>
<div class="container margin-header margin-footer">
  <h1 class="title"><%= t ".edit_lesson" %></h1>
  <div class="row">
    <div class="col-md-8 offset-md-3">
      <%= form_for([:admin, @category, @lesson], html: {class: "form-horizontal"}) do |f| %>
        <div class="form-group mb-4">
          <%= f.label :name, t(".name_lesson"), class: "col-md-4 control-label" %>
          <div class="col-lg-9">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-9">
            <%= f.submit t(".edit_lesson"), class: "btn btn-success btn-register" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
