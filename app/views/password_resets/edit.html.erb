<% provide :title, t(".reset_password") %>
<div class="Container margin-header margin-footer">
  <h1 class="title"><%= t ".reset_password" %></h1>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
        <%= render "shared/error_messages", object: @user %>
        <%= hidden_field_tag :email, @user.email %>

        <%= f.label :password, t(".password") %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label :password_confirmation, t(".password_confirm"), class: "mt-3" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>

        <%= f.submit t(".update"), class: "btn btn-primary mt-3 mb-5" %>
      <% end %>
    </div>
  </div>
</div>
